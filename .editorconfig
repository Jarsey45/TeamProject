root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{php,js,jsx,ts,tsx,css,scss,html,json,md}]
indent_style = tab
indent_size = 2
max_line_length = 120

# YAML Files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
