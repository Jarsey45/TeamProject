{% extends 'security/base.html.twig' %}

{% block body %}
	<div class="form-container">
		<h1>Welcome Back to
			<span class="brand-name">FishingSpot</span>
		</h1>
		<form action="{{ path('app_login') }}" method="post">
			<label for="email">Email</label>
			<input type="email" id="email" name="_username" placeholder="Enter your email" value="{{email}}" required>

			<label for="password">Password</label>
			<input type="password" id="password" name="_password" placeholder="Enter your password" required>

			<input type="hidden" name="_target_path" value="/dashboard">
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button type="submit">Login</button>
		</form>

		{% if error %}
			<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<div class="register">
			<p>Don't have an account?
				<a href="{{ path('app_register') }}">Register</a>
			</p>
		</div>
	</div>
{% endblock %}
